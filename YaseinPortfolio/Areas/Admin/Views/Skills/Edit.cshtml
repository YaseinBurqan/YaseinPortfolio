@model YaseinPortfolio.Models.Skill

@{
   ViewData["Title"] = "Edit";
}

<h1>Edit Skill</h1>

<hr />
<div class="row">
   <div class="col-md-4">
      <form asp-action="Edit" enctype="multipart/form-data">
         <div asp-validation-summary="ModelOnly" class="text-danger"></div> 
         <input type="hidden" asp-for="SkillId" />
         <div class="form-group">
            <label asp-for="SkillName" class="control-label"></label>
            <input asp-for="SkillName" class="form-control" />
            <span asp-validation-for="SkillName" class="text-danger"></span>
         </div>
         <div class="form-group">
            <label asp-for="SkillImg" class="control-label"></label>
            <input asp-for="SkillImg" type="file" accept="image/*" class="form-control" required/>
            <span asp-validation-for="SkillImg" class="text-danger"></span>
         </div>
        
         <div class="form-group">
            <br />
            <input type="submit" value="Save" class="btn btn-danger btn-buy-now" />
         </div>
      </form>
   </div>
</div>

<div>
   <a asp-action="Index">Back to List</a>
</div>

