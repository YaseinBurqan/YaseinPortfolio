@model IEnumerable<YaseinPortfolio.Models.Certificate>

@{
   ViewData["Title"] = "Index";
}

<h1>Certificates Page</h1>

<p>
   <a asp-action="Create">Create New</a>
</p>
<table class="table">
   <thead>
      <tr>
         <th>
            @Html.DisplayNameFor(model => model.CertificateName)
         </th>
         <th>
            @Html.DisplayNameFor(model => model.CertificateImg)
         </th>
         <th>
            @Html.DisplayNameFor(model => model.CertificateGiver)
         </th>
         <th>
            @Html.DisplayNameFor(model => model.CertificateReleaseDate)
         </th>
         <th>
            @Html.DisplayNameFor(model => model.CertificatePdf)
         </th>
         <th>
            @Html.DisplayNameFor(model => model.CertificateDescription)
         </th>
         <th></th>
      </tr>
   </thead>
   <tbody>
      @foreach (var item in Model)
      {
         <tr>
            <td>
               @Html.DisplayFor(modelItem => item.CertificateName)
            </td>
            <td>
               <img src="~/portfolioImages/Certificates/@item.CertificateImg" width="100" />
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.CertificateGiver)
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.CertificateReleaseDate)
            </td>
            <td>
               <a href="@item.CertificatePdf" target="_blank" class="btn btn-primary rounded">Certificate</a>
            </td>
            <td>
               <p style="width: 100px;">
                  @Html.DisplayFor(modelItem => item.CertificateDescription)
               </p>
            </td>
            <td>
               <a asp-action="Edit" asp-route-id="@item.CertificateId">Edit</a> <br />
               <a asp-action="Details" asp-route-id="@item.CertificateId">Details</a> <br />
               <a asp-action="Delete" asp-route-id="@item.CertificateId">Delete</a>
            </td>
         </tr>
      }
   </tbody>
</table>

