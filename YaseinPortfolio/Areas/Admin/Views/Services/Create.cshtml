@model YaseinPortfolio.Models.Service

@{
   ViewData["Title"] = "Create";
}

<h1>Create New Service</h1>

<hr />
<div class="row">
   <div class="col-md-4">
      <form asp-action="Create">
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         <div class="form-group">
            <label asp-for="ServiceName" class="control-label"></label>
            <input asp-for="ServiceName" class="form-control" required/>
            <span asp-validation-for="ServiceName" class="text-danger"></span>
         </div>
         <div class="form-group">
            <label asp-for="ServiceDescription" class="control-label"></label>
            <input asp-for="ServiceDescription" class="form-control" required />
            <span asp-validation-for="ServiceDescription" class="text-danger"></span>
         </div>
         <div class="form-group">
            <br />

            <input type="submit" value="Create" class="btn btn-danger btn-buy-now" />
         </div>
      </form>
   </div>
</div>

