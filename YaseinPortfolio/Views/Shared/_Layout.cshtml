@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> _signInManager;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Start your development with Steller landing page.">
    <meta name="author" content="Devcrud">
    <title>Steller Landing page | Free Bootstrap 4.1 landing page</title>
    <!-- font icons -->
    <link rel="stylesheet" href="~/assets/vendors/themify-icons/css/themify-icons.css">
    <!-- Bootstrap + Steller main styles -->
    <link rel="stylesheet" href="~/assets/css/steller.css">
    <link rel="stylesheet" href="~/assets/outside-styles/Certificates.css">
    <link rel="stylesheet" href="~/assets/outside-styles/Services.css">
    <link rel="stylesheet" href="~/assets/outside-styles/Skills.css">
    <link rel="stylesheet" href="~/assets/outside-styles/Experiance.css">
    <link rel="stylesheet" href="~/assets/outside-styles/MyWork.css">
</head>
<body data-spy="scroll" data-target=".navbar" data-offset="40" id="home">

    <!-- Page navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" data-spy="affix" data-offset-top="0">
        <div class="container">
            <a class="navbar-brand" href="#"><img src="assets/imgs/logo.png" width="50px" height="65px" alt=""></a>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto align-items-center">
                    <li class="nav-item">
                        <a class="nav-link" style="color:#ff7a57" asp-action="Index" asp-controller="Home" asp-area="">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#AboutMe">AboutMe</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#Service">Services</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#Certificate">Certificates</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#Skill">Skills</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#Experience">Experiences</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#MyWork">Works</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#TrainingCourse">Training Course</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#contact">Contact</a>
                    </li>

                    @if (_signInManager.IsSignedIn(User))
                    {
                        @if (_signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <div class="dropdown">
                                    <button class="btn btn-primary rounded ml-4" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Settings
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <a asp-action="Index" asp-controller="Dashboard" asp-area="Admin" class="dropdown-item">Dashboard</a>
                                        <form asp-action="Logout" asp-controller="Account" asp-area="" method="post" class="">
                                            <button class="dropdown-item" type="submit">
                                                Logout
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <form asp-action="Logout" asp-controller="Account" asp-area="" method="post" class="">
                                    <button class="btn btn-primary rounded ml-4" type="submit">
                                        Logout
                                    </button>
                                </form>
                            </li>
                        }

                    }
                    else
                    {
                        <li class="nav-item">
                            <a asp-action="Login" asp-controller="Account" asp-area="" class="btn btn-primary rounded ml-4">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <!-- End of page navibation -->
    <!-- Page Header -->
    <header class="header" id="home">
        <div class="container">
            <div class="infos">
                <h6 class="subtitle">hello,I'm</h6>
                <h6 class="title">Yasein Burqan</h6>
                <p>
                    Web Developer
                </p>

                <div class="buttons pt-3">
                    <a class="btn btn-primary rounded" href="mailto:mr.yasein@gmail.com">HIRE ME</a>
                    <a href="https://drive.google.com/file/d/1mTOOkutKl8_GYvzmM1xF6D5ieBiONjmW/view?usp=sharing" target="_blank" class="btn btn-dark rounded">DOWNLOAD CV</a>

                </div>

                <div class="socials mt-4">
                    <a class="social-item" href="https://qa.linkedin.com/in/yaseinburqan" target="_blank"><i class="ti-linkedin"></i></a>
                    <a class="social-item" href="https://github.com/YaseinBurqan/" target="_blank"><i class="ti-github"></i></a>
                </div>
            </div>
            <div class="img-holder">
                <img src="~/assets/imgs/man.svg" alt="">
            </div>
        </div>

        <!-- Header-widget -->
        <div class="widget">
            <div class="widget-item">
                <h2>
                    456
                </h2>
                <p>Project Completed</p>
            </div>
        </div>
    </header>
    <br />
    <!-- End of Page Header -->
    <!-- Render Body -->
    <div class="container">
        @RenderBody()
    </div>
    <!-- End of Render Body -->
    <!-- Hire me section -->
    <!-- Page Footer -->
    <footer class="page-footer">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-sm-6">
                    <p>Copyright <script>document.write(new Date().getFullYear())</script> &copy; <a href="https://qa.linkedin.com/in/yaseinburqan" target="_blank">Yasein Burqan</a></p>
                </div>
                <div class="col-sm-6">
                    <div class="socials">
                        <a class="social-item" href="https://qa.linkedin.com/in/yaseinburqan" target="_blank"><i class="ti-linkedin"></i></a>
                        <a class="social-item" href="https://github.com/YaseinBurqan/" target="_blank"><i class="ti-github"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- End of page footer -->
    <!-- core  -->
    <script src="~/assets/vendors/jquery/jquery-3.4.1.js"></script>
    <script src="~/assets/vendors/bootstrap/bootstrap.bundle.js"></script>
    <!-- bootstrap 3 affix -->
    <script src="~/assets/vendors/bootstrap/bootstrap.affix.js"></script>

    <!-- steller js -->
    <script src="~/assets/js/steller.js"></script>

</body>
</html>
